<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_color"
    android:orientation="vertical">
    <!--android:background="@color/app_line"-->

    <com.xianglin.fellowvillager.app.widget.TopView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--app:topview_isAdjustResize="true"-->

    <LinearLayout
        android:id="@+id/ll_addfriends_scan"
        style="@style/MMListItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height52"
        android:background="@drawable/setting_item_selector"
        android:paddingLeft="@dimen/common_padding_medium">

        <com.xianglin.fellowvillager.app.widget.CircleImage
            android:id="@+id/ci_addfriends_scan"
            android:layout_width="@dimen/common_image_size36"
            android:layout_height="@dimen/common_image_size36"
            android:src="@drawable/scan"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_padding_small">

            <TextView
                android:id="@+id/tv_addfriends_scan"
                style="@style/MMFontTitleInList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="扫一扫"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_14_dip"
                android:src="@drawable/right"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/ll_addfriends_near"
        style="@style/MMListItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height52"
        android:background="@drawable/setting_item_selector"
        android:paddingLeft="@dimen/common_padding_medium">

        <com.xianglin.fellowvillager.app.widget.CircleImage
            android:id="@+id/ci_addfriends_near"
            android:layout_width="@dimen/common_image_size36"
            android:layout_height="@dimen/common_image_size36"
            android:src="@drawable/near_people"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_padding_small">

            <TextView
                android:id="@+id/tv_addfriends_near"
                style="@style/MMFontTitleInList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="附近的人"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_14_dip"
                android:src="@drawable/right"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
