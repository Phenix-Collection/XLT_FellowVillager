<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/business_card_background"
    android:orientation="vertical">

    <com.xianglin.fellowvillager.app.widget.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rela_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:text="头像"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <com.xianglin.fellowvillager.app.widget.CircleImage
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dimen_42_dip"
            android:layout_height="@dimen/dimen_42_dip"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_toLeftOf="@+id/arrow1"
            android:src="@drawable/head" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:background="@color/app_text_color4" />

    <RelativeLayout
        android:id="@+id/rela_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:text="名称"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dimen_250_dip"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_toLeftOf="@+id/arrow2"
            android:gravity="right"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:background="@color/app_text_color4" />

    <RelativeLayout
        android:id="@+id/rela_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:text="性别"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_toLeftOf="@+id/arrow3"
            android:gravity="center"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:background="@color/app_text_color4" />

    <RelativeLayout
        android:id="@+id/rela_partId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:text="@string/str_figureId"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <TextView
            android:id="@+id/tv_figureId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_toLeftOf="@+id/arrow4"
            android:gravity="center"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:id="@+id/arrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:background="@color/app_text_color4" />

    <RelativeLayout
        android:id="@+id/rela_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_medium"
        android:background="@drawable/setting_item_selector"
        android:minHeight="@dimen/dimen_50_dip">

        <TextView
            android:layout_width="@dimen/dimen_80_dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:text="@string/str_user_describe"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_toLeftOf="@+id/arrow5"
            android:gravity="left|center"
            android:maxLength="30"
            android:padding="@dimen/common_padding_small"
            android:singleLine="true"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:id="@+id/arrow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnFigure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginBottom="@dimen/common_padding_large"
        android:layout_marginLeft="@dimen/common_padding_medium"
        android:layout_marginRight="@dimen/common_padding_medium"
        android:layout_marginTop="@dimen/common_padding_large"
        android:background="@drawable/setting_item_selector"
        android:text="@string/str_fix_role"
        android:textColor="@color/red" />
</LinearLayout>
