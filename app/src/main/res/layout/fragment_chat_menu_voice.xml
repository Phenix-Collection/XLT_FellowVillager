<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_menu_bg"
    android:padding="@dimen/common_padding_small"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="00:00"
    android:id="@+id/voice_time"
    android:visibility="invisible"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:textColor="@color/app_text_color3"
    android:textSize="@dimen/common_text_size13"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="松手取消发送"
        android:id="@+id/voice_delete_tip"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/app_text_color3"
        android:textSize="@dimen/common_text_size13"
        />
    <ImageView
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:src="@drawable/chat_voice_delete_default"
        android:layout_above="@+id/voice_line"
        android:layout_marginTop="5dp"
        android:id="@+id/voice_delete"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:layout_marginBottom="-18dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_voice_line"
        android:layout_above="@+id/voice_recorder"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/voice_line"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/chat_voice_recorder_bg"
        android:id="@+id/voice_recorder"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按住说话"
        android:layout_marginTop="45dp"
        android:id="@+id/voice_hold"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:textColor="@color/app_text_color3"
        android:textSize="@dimen/common_text_size16"
        />
</RelativeLayout>
