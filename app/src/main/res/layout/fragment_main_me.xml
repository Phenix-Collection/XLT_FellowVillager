<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.xianglin.fellowvillager.app.fragment.MainMeFragment">

    <include android:id="@+id/ic_current_role" layout="@layout/user_figure_include" />

    <RelativeLayout
        android:id="@+id/rela_all_figure"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/all_role"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/iv_before"
            android:layout_width="33dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:padding="10dp"
            android:src="@drawable/arrow_img_left" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="33dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding_small"
            android:padding="10dp"
            android:src="@drawable/arrow_img_right" />

        <TextView
            android:id="@+id/tv_cur_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/app_text_color2"
            android:padding="2dp"
            android:text="2/5"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shopping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:background="@drawable/setting_item_selector"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:drawableLeft="@drawable/icon_shopping_me"
            android:drawablePadding="@dimen/dimen_10_dip"
            android:gravity="center"
            android:text="乡邻购"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qr_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:visibility="visible"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:gravity="center"
            android:text="@string/my_qrcode"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_12_dip"
            android:layout_toLeftOf="@+id/arrow_img"
            android:src="@drawable/user_qrcode_icon" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:visibility="visible"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_11_dip"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/common_text_size16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_16_dip"
            android:src="@drawable/right" />
    </RelativeLayout>
</LinearLayout>
