<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_good_visiting_code_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:layout_marginLeft="@dimen/dimen_25_dip"
        android:gravity="center_vertical"
        android:text="本月"
        android:textColor="#808ca8"
        android:textSize="@dimen/common_text_size13"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_good_visiting_code"
        android:layout_width="@dimen/dimen_306_dip"
        android:layout_height="@dimen/dimen_161_dip"
        android:layout_marginBottom="@dimen/dimen_13_dip"
        android:background="@drawable/visiting_code_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_good_visiting_code_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:background="@drawable/good_visiting_code_shape_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:text="商品"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_good_visiting_code_img"
                android:layout_width="133dp"
                android:layout_height="133dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"
                android:background="@drawable/good_visiting_code_shape_content"/>
            <!--android:src="@drawable/logo_lanuch"-->

            <RelativeLayout
                android:id="@+id/linelay_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_22_dip"
                android:layout_marginRight="@dimen/dimen_16_dip"
                android:layout_marginTop="@dimen/dimen_30_dip">

                <TextView
                    android:id="@+id/tv_good_visiting_code_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="正品正品正品正品正品正品正品正品正品正品正品正品正品正品正品正品正品正品正品"
                    android:textColor="#666666"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_good_visiting_code_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dimen_35_dip"
                    android:text="￥ 1139.90"
                    android:textColor="#ff8d5a"
                    android:textSize="@dimen/common_text_size16"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>