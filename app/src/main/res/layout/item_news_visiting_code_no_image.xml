<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_news_visiting_code_no_image_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:layout_marginLeft="@dimen/dimen_25_dip"
        android:gravity="center_vertical"
        android:text="本月"
        android:textColor="#808ca8"
        android:textSize="@dimen/common_text_size13"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_news_visiting_code_no_image"
        android:layout_width="@dimen/dimen_306_dip"
        android:layout_height="@dimen/dimen_161_dip"
        android:layout_marginBottom="@dimen/dimen_13_dip"
        android:background="@drawable/visiting_code_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_news_visiting_code_no_image_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:background="@drawable/news_visiting_code_shape_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:text="外部网页"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_17_dip"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:layout_marginRight="@dimen/dimen_17_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_visiting_code_no_image_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="正品"
                android:textColor="#666666"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_news_visiting_code_no_image_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_11_dip"
                android:layout_marginRight="@dimen/dimen_5_dip"
                android:src="@drawable/news_link"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>




