<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_person_visiting_code_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:layout_marginLeft="@dimen/dimen_25_dip"
        android:gravity="center_vertical"
        android:text="本周"
        android:textColor="#808ca8"
        android:textSize="@dimen/common_text_size13"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_person_visiting_code"
        android:layout_width="@dimen/dimen_306_dip"
        android:layout_height="@dimen/dimen_161_dip"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_13_dip"
        android:background="@drawable/visiting_code_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_person_visiting_code_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28_dip"
            android:background="@drawable/person_visiting_code_shape_title"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:text="名片"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.xianglin.fellowvillager.app.widget.CircleImage
                android:id="@+id/iv_idImg"
                android:layout_width="@dimen/dimen_73_dip"
                android:layout_height="@dimen/dimen_73_dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_16_dip"
                android:src="@drawable/head"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15_dip"
                android:layout_marginRight="@dimen/dimen_16_dip"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_idName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="hello hello hello hello hello "
                    android:textColor="#666666"
                    android:textSize="@dimen/common_text_size18"/>

                <TextView
                    android:id="@+id/tv_idXLID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_idName"
                    android:layout_marginTop="@dimen/dimen_5_dip"
                    android:text="乡邻号: 0301"
                    android:textColor="#a5a5a5"
                    android:textSize="@dimen/common_text_size15"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
